<div class="container">
  {{#if updateQuestionTag}}
  <h4>Update question:</h4>
  <div class="container">
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field inline col s12">
            {{input value=author id="author" placeholder=question.author}}
            <label for="author">User Name:</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{input value=content id="content" placeholder=question.content}}
            <label for="content">Enter Question</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{input value=notes id="notes" placeholder=question.notes}}
            <label for="notes">Enter any notes</label>
          </div>
        </div>
        <button {{action 'updateQuestion' question}} class="btn blue">Submit</button>
      </form>
    </div>
  </div>
  {{else}}
  <button class="btn yellow" {{action 'showQuestionForm'}}>Update Question</button><br>
  {{/if}}
</div>
