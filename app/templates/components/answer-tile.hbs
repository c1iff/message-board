<div class="container">
  <div class="col s12 m7">
    <div class="card horizontal">
      <div class="card-image">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <form >
            <button {{action 'addVote' answer}} class="btn-floating pink accent-3 right"><i class="material-icons">add</i></button>
            <button {{action 'removeVote' answer}} class="btn-floating pink accent-3 right" id="pad-to-left"><i class="material-icons">remove</i></button>
          </form>
          <h4 class="header">Answer: {{answer.content}}</h4>
          <p>{{answer.notes}}</p>
          <p>Current Vote: {{answer.vote}}</p>
          <hr>
          <p>User name: {{answer.author}} <span class="right">Answered: {{answer.answered}}</span></p>
        </div>
      </div>
    </div>
  </div>
</div>
