<div class="container">
  <div class="col s12 m7">
    <div class="card horizontal">
      <div class="card-image">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <form >
            <button {{action 'addVote' answer}} class="btn-floating pink accent-3 right" id="pad-button"><i class="material-icons">arrow_upward</i></button>
            <p class="right" id="vote-pad"><b>Rating: {{answer.vote}}</b></p>
            <button {{action 'removeVote' answer}} class="btn-floating pink accent-3 right" id="pad-button"><i class="material-icons">arrow_downward</i></button>
          </form>
          <h4 class="header"><span class="red-text">A:</span> {{answer.content}}</h4>
            <p>{{answer.notes}}</p>
          <div class="divider"></div>
          <div class="section">
            <p><span class="pink-text">By:</span> {{answer.author}} <span class="right"><span class="purple-text bold">Answered:</span>  {{answer.answered}}</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
