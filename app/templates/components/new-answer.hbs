<div class="container">
  {{#if addCommentTag}}
  <h4>Add a comment:</h4>
  <div class="container">
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            {{input value=author id="author" class="validate"}}
            <label for="author">User Name:</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{input value=content id="content" class="validate"}}
            <label for="content">Enter Comment</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            {{input value=date id="date" class="validate"}}
            <label for="date">Enter the date</label>
          </div>
        </div>
        <button {{action 'saveComment' article}} class="btn blue">Submit</button>
      </form>
    </div>
  </div>
  {{else}}
  <button class="btn blue" {{action 'showAnswerForm'}}>Add an Answer</button><br>
  {{/if}}
</div>
